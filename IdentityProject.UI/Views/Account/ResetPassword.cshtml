@model IdentityProject.UI.Models.Dto.Account.ResetPasswordDto

@{
    ViewData["Title"] = "ResetPassword";
}



<h4>تنظیم مجدد رمز عبور</h4>

<div class="row">
    <div class="col-md-4">
        @if (ViewBag.meesage != null)
        {
            <div class="alert alert-info">
                @ViewBag.Errors
            </div>
        }
        <form asp-action="ResetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <input asp-for="UserId" type="hidden" class="form-control" />

            <input asp-for="Token" type="hidden" class="form-control" />

            <div class="form-group">
                <input type="submit" value="تعویض رمز عبور" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



