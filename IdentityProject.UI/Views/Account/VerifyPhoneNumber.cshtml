@model IdentityProject.UI.Models.Dto.Account.VerifyPhoneNumberDto

@{
    ViewData["Title"] = "VerifyPhoneNumber";
}


<h4> کد ارسال شده به شماره موبال خود را وارد کنید</h4>
<h2>@Model.PhoneNumber</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="VerifyPhoneNumber">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="PhoneNumber" type="hidden" class="form-control" />

            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="بررسی کد" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>
